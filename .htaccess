# === SÉCURITÉ PRODUCTION ===

# Interdire l'affichage du contenu des dossiers
Options -Indexes

# Protéger les fichiers sensibles
<FilesMatch "^(\.env|\.git|composer\.(json|lock)|\.htaccess|migrate_to_sqlite\.php)$">
    Require all denied
</FilesMatch>

# Headers de sécurité
<IfModule mod_headers.c>
    # Empêcher le MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Protection XSS
    Header set X-XSS-Protection "1; mode=block"

    # Empêcher le site d'être affiché dans une iframe (protection clickjacking)
    Header always set X-Frame-Options "SAMEORIGIN"

    # Politique de référent stricte
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy (ajuster selon vos besoins)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:;"

    # Supprimer les headers révélant des infos serveur
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# Empêcher l'accès direct aux fichiers PHP sensibles
<Files "config/database.php">
    Require all denied
</Files>

<Files "auth.php">
    Require all denied
</Files>

# Protection contre les injections SQL basiques
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Bloquer les tentatives d'injection SQL dans l'URL
    RewriteCond %{QUERY_STRING} (union|select|insert|drop|delete|update|alter|create|replace|truncate|concat|script|javascript|eval|base64) [NC]
    RewriteRule .* - [F,L]

    # Bloquer les tentatives de traversée de répertoire
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|/\.\.|\\\.\./) [NC,OR]
    RewriteCond %{THE_REQUEST} (\.\./|\.\.\\|/\.\.|\\\.\./) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Compression GZIP pour meilleures performances
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache navigateur pour ressources statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType font/woff2 "access plus 1 month"
</IfModule>
